@model AM.ApplicationCore.Domain.Infirmier

<h4>Infirmier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomComplet" class="control-label"></label>
                <input asp-for="NomComplet" class="form-control" />
                <span asp-validation-for="NomComplet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeInfirmier" class="control-label"></label>
                <select asp-for="CodeInfirmier" class="form-control" asp-items="ViewBag.CodeInfirmier"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodePatient" class="control-label"></label>
                <select asp-for="CodePatient" class="form-control" asp-items="ViewBag.CodePatient"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
